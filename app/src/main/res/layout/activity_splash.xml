<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_bg"
    tools:context=".presentation.screens.SplashActivity">

    <FrameLayout
        android:id="@+id/imageViewBg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/splash_screen_circle_bg"
        android:elevation="8dp"
        android:layout_marginVertical="@dimen/spacingXl"
        app:layout_constraintBottom_toTopOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:contentDescription="Icon"
            android:src="@drawable/ic_community"
            app:tint="@color/primaryAccentColor" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/text3xl"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imageViewBg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/community_that_matters_in_your_campus"
        android:textSize="@dimen/textMd"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacingMd"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>