<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginTop="@dimen/spacingLg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacingXl"
            android:layout_marginTop="@dimen/spacingLg"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            android:background="@color/secondaryAccentColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacingLg"
                android:background="@color/white">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars"/>

                <View
                    android:id="@+id/viewOnlineStatus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_online_indicator"
                    app:layout_constraintEnd_toEndOf="@id/ivProfileImage"
                    app:layout_constraintBottom_toBottomOf="@id/ivProfileImage"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacingLg"
                    android:textSize="@dimen/textXl"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/ivProfileImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ivProfileImage"
                    tools:text="Sakshi Hotkar"/>

                <TextView
                    android:id="@+id/tvUserHandle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacingXs"
                    android:textSize="@dimen/textMd"
                    android:textColor="@color/secondaryTextColor"
                    app:layout_constraintStart_toStartOf="@id/tvUserName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName"
                    tools:text="Ankit"/>

                <!-- Course and College Info -->
                <LinearLayout
                    android:id="@+id/llCourseInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacingLg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivProfileImage">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/spacingMd"
                        android:background="@drawable/bg_info_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/course"
                            android:textSize="@dimen/textSm"
                            android:textColor="@color/secondaryTextColor"/>

                        <TextView
                            android:id="@+id/tvCourse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacingXs"
                            android:textSize="@dimen/textMd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"
                            tools:text="Computer Science"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/spacingMd"
                        android:layout_marginStart="@dimen/spacingMd"
                        android:background="@drawable/bg_info_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/college"
                            android:textSize="@dimen/textSm"
                            android:textColor="@color/secondaryTextColor"/>

                        <TextView
                            android:id="@+id/tvCollege"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacingXs"
                            android:textSize="@dimen/textMd"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"
                            tools:text="MIT"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Created Communities Section -->
        <LinearLayout
            android:id="@+id/llCreatedHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/spacingXl"
            android:layout_marginVertical="@dimen/spacingXl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvProfile">

            <ImageView
                android:layout_width="@dimen/iconSm"
                android:layout_height="@dimen/iconSm"
                android:src="@drawable/ic_crown" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacingMd"
                android:text="@string/created_communities"
                android:textSize="@dimen/textMd"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/tvCreatedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textMd"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:paddingVertical="2dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/secondary_badge_bg"
                tools:text="1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCreatedCommunities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacingXl"
            android:layout_marginTop="@dimen/spacingMd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llCreatedHeader"/>

        <!-- Joined Communities Section -->
        <LinearLayout
            android:id="@+id/llJoinedHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacingMd"
            android:layout_marginHorizontal="@dimen/spacingXl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvCreatedCommunities">

            <ImageView
                android:layout_width="@dimen/iconSm"
                android:layout_height="@dimen/iconSm"
                android:src="@drawable/ic_community"
                app:tint="@color/blue"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacingMd"
                android:text="@string/joined_communities"
                android:textSize="@dimen/textMd"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/tvJoinedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textMd"
                android:textStyle="bold"
                android:paddingVertical="2dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/secondary_badge_bg"
                android:textColor="@color/primaryTextColor"
                tools:text="4"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvJoinedCommunities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacingXl"
            android:layout_marginBottom="@dimen/spacing4xl"
            android:layout_marginTop="@dimen/spacingMd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llJoinedHeader"/>

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="@string/logout"
            app:strokeColor="@color/red"
            android:textSize="@dimen/textMd"
            android:textColor="@color/red"
            android:letterSpacing="0.03"
            app:cornerRadius="@dimen/buttonCornerRadius"
            android:layout_marginStart="@dimen/spacingXxl"
            android:layout_marginTop="@dimen/spacing4xl"
            android:layout_marginEnd="@dimen/spacingXxl"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textStart"
            app:iconTint="@color/red"
            app:iconSize="@dimen/iconXs"
            app:layout_constraintStart_toStartOf="@id/rvJoinedCommunities"
            app:layout_constraintEnd_toEndOf="@id/rvJoinedCommunities"
            app:layout_constraintTop_toBottomOf="@id/rvJoinedCommunities"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>